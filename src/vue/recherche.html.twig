{% extends "base.html.twig" %}
{% block title %} {{ parent() }} Résultat de votre recherche {% endblock %}
{% block contenu %}
<h1>Résultat de votre recherche</h1>

{% if form.produit|length == 0 %}
    <p>Aucun produits ne correspond à votre recherche</p>
{% else %}
    <p>{{ form.produit|length }} produits correspondent à votre recherche</p>
    <ul>
        {% for produit in liste %}
            <li>{{ produit.designation }}</a></li>
        {% endfor %}
    </ul>

    {% set nb = form.nbpages %}

    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center m-4 p-4">
            <li class="page-item {% if form.nopage == 0 %}disabled{% endif %}">
                <a class="page-link" href="index.php?page=recherche&search={{form.search}}&nopage={{ 0 }}" aria-label="Previous"><span aria-hidden="true">&laquo;</span></a>
            </li>
            {% for i in 1..nb %}
            <li class="page-item {% if i ==form.nopage +1 %} active{% endif %}">
                <a class="page-link" href="index.php?page=recherche&search={{form.search}}&nopage={{ i-1 }}">{{ i }}<span class="sr- only"></span></a>
            </li>
            {% endfor %}
                <li class="page-item {% if form.nopage == form.nbpages-1 %}disabled{% endif %}"><a class="page-link" href="index.php?page=rechercher&search={{form.search}}&nopage={{ nb-1 }}" aria-label="Next" ><span aria-hidden="true">&raquo;</span></a>
            </li>
        </ul>
    </nav>
{% endif %}


{% endblock %}